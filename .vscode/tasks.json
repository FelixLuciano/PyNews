{
  "version": "2.0.0",
  "type": "shell",
  "command": "${command:python.interpreterPath}",
  "inputs": [
    {
      "id": "pageLocation",
      "type": "promptString",
      "description": "Page location (folder/.../name)",
      "default": "New page"
    }
  ],
  "tasks": [
    {
      "label": " ",
      "detail": "Setup (Run once!)",
      "icon": {
        "id": "package"
      },
      "args": [
        "src",
        "setup"
      ],
      "presentation": {
        "close": true
      }
    },
    {
      "label": "  ",
      "detail": "Show project source.",
      "icon": {
        "id": "unlock"
      },
      "args": [
        "src",
        "source",
        "--show"
      ],
      "presentation": {
        "reveal": "never",
        "revealProblems": "always",
        "close": true
      }
    },
    {
      "label": "   ",
      "detail": "Hide project source.",
      "icon": {
        "id": "lock"
      },
      "args": [
        "src",
        "source",
        "--hide"
      ],
      "presentation": {
        "reveal": "never",
        "revealProblems": "always",
        "close": true
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "New page",
      "detail": "Create a new page.",
      "icon": {
        "id": "file-add"
      },
      "args": [
        "src",
        "create",
        "${input:pageLocation}"
      ],
      "presentation": {
        "reveal": "never",
        "revealProblems": "always",
        "close": true
      }
    }
  ]
}