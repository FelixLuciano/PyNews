{
  "blockquote": {
    "margin": "0",
    "padding-left": ".8rem",
    "border-left": ".25rem solid #ccc"
  },

  "h1": {
    "font-size": "2em"
  },

  "h2": {
    "font-size": "1.65em",
    "margin-bottom": "-.5rem"
  },

  "a": {
    "color": "currentcolor"
  },

  "ul": {
    "padding-left": "1.5rem"
  },

  "hr": {
    "margin": "2rem 0",
    "border": "none",
    "border-top": "2px solid #EEEEEE"
  },

  "img": {
    "max-width": "100%",
    "border-radius": ".4rem"
  }
}
