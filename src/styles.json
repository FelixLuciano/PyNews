{
  ".container": {
    "max-width": "685px",
    "margin": "0 auto",
    "padding": "0.25rem",
    "font-size": "16px",
    "font-family": "system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Helvetica Neue,Helvetica,Arial,sans-serif"
  },

  "h1": {
    "color": "#89d235",
    "font-size": "2em"
  },

  "h2": {
    "font-size": "1.65em",
    "margin-bottom": "-.5rem"
  },

  "a": {
    "color": "currentcolor"
  },

  "img": {
    "max-width": "100%",
    "border-radius": ".4rem"
  },

  "blockquote": {
    "margin": "0",
    "padding-left": ".8rem",
    "border-left": ".25rem solid #ccc"
  },

  "ul": {
    "padding-left": "1.5rem"
  },

  "hr": {
    "margin": "2rem 0",
    "border": "none",
    "border-top": "2px solid #EEEEEE"
  }
}
